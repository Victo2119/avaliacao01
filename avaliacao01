console.log(`ğŸ“’ 4Âº Bimestre: ${bimestre4}`);
console.log("-----------------------------------------");
console.log(`ğŸ§® 1Âº Semestre: ${semestre1.toFixed(1)}`);
console.log(`ğŸ§  2Âº Semestre: ${semestre2.toFixed(1)}`);
console.log("-----------------------------------------");
console.log(`ğŸ† MÃ©dia Final: ${mediaFinal.toFixed(1)}`);

// VerificaÃ§Ã£o do desempenho
if (mediaFinal >= 7) {
    console.log("âœ… ParabÃ©ns, Victor! VocÃª estÃ¡ aprovado!");
} else if (mediaFinal >= 5) {
    console.log("âš ï¸ VocÃª estÃ¡ em recuperaÃ§Ã£o, mas pode melhorar!");
