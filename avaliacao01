let semestre1 = (bimestre1 + bimestre2) / 2; // 1Âº semestre
let semestre2 = (bimestre3 + bimestre4) / 2; // 2Âº semestre

// CÃ¡lculo da mÃ©dia final
let mediaFinal = (semestre1 + semestre2) / 2;

// Exibindo os resultados
console.log("=== MÃ©dias de Victor Gabriel Lima Lopes ===");
console.log(`ğŸ“˜ 1Âº Bimestre: ${bimestre1}`);
console.log(`ğŸ“— 2Âº Bimestre: ${bimestre2}`);
